@charset "utf-8";body { overflow: hidden; }#intro_wrap { position: absolute; top: 0; left: 0; width: 100%; height: 100%; }#intro_wrap > .inner { position: relative; width: 100%; height: 100%; display: table; background-image: url("../images/intro/intro_hanam.jpg"); background-repeat: no-repeat; background-position: center; background-size: cover; }#intro_wrap > .inner.hanam { background-image: url("../images/intro/intro_hanam.jpg"); }#intro_wrap > .inner.goyang { background-image: url("../images/intro/intro_goyang.jpg"); }#intro_wrap .intro_section { display: table-cell; width: 50%; height: 100%; vertical-align: middle; text-align: center; padding: 5%; }#intro_wrap .intro_section img { margin: 0 auto; max-width: 100%; }#intro_wrap .intro_section .kr { display: none; }#intro_wrap .intro_section .en { display: block; }#intro_wrap .intro_section:hover .kr { display: block; }#intro_wrap .intro_section:hover .en { display: none; }